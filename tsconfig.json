{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "~/*": ["src/app/*"],
    },
    "typeRoots": [
			"node_modules/@types",
			"node_module/phaser/types",
      "src/app/@types"
		],
		"types": [
			"Phaser"
		]
  },
  "include": ["src/**/*"]
}
